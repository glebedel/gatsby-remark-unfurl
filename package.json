{
  "name": "gatsby-remark-unfurl",
  "version": "1.0.0",
  "description": "Gatsby Remark plugin to Unfurl links in markdown files",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "homepage": "https://github.com/hgezim/gatsby-remark-link-unfurl",
  "repository": "https://github.com/hgezim/gatsby-remark-link-unfurl",
  "scripts": {
    "lint": "eslint '*/**/*.{js,ts,tsx}' --quiet --fix",
    "prepublish": "npm run build",
    "build": "npm run lint && rm -rf dist/ && tsc",
    "release": "release-it --verbose --ci]"
  },
  "author": "guillaume.lebedel@gmail.com",
  "keywords": [
    "gatsby",
    "gatsby-plugin",
    "gatsby-remark",
    "link-unfurl",
    "gatsby markdown"
  ],
  "license": "MIT",
  "dependencies": {
    "mustache": "^4.1.0",
    "unfurl.js": "^5.2.3",
    "unist-util-select": "^3.0.4"
  },
  "devDependencies": {
    "@types/node": "^13.13.2",
    "@types/unist": "^2.0.3",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "eslint": "^7.19.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-prettier": "^3.3.1",
    "husky": "^4.3.8",
    "lint-staged": "^10.5.3",
    "prettier": "^2.2.1",
    "release-it": "^14.2.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --fix"
    ]
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release v${version}"
    },
    "github": {
      "release": true
    }
  }
}
